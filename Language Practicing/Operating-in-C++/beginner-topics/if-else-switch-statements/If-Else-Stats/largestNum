
#include <iostream>
using namespace std;

// Here we are going to work on If-Else and Switch Statements

/******
* Let's write an if-else statement that does the following:
*
* 1. Here we will start off with to three nums, you job is to utilize if-else to output the biggest number.
*
*******/

int main() {

    int x = 15, y = 20, z = 10;
    int largest;
    
    if (x > y) {
        largest = x;
    } else if (y > z) {
        largest = y;
    } else if (z > largest) {
        largest = z;
    } 

    cout << "The largest number is: " << largest << endl;

    return 0;
}
